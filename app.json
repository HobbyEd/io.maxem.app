{
    "id": "io.maxem.app",
    "sdk": 2,
    "name": {
        "en": "Maxem smart energy",
        "nl": "Maxem smart energy"
    },
    "description": {
        "en": "Maxem the solution for a sustainable home!",
        "nl": "Maxem de energie manager voor een duurzaam huis!"
    },
    "category": "energy",
    "version": "1.0.0",
    "compatibility": ">=1.5.0",
    "author": {
        "name": "Edwin van Dillen",
        "email": "edwinvandillen@gmail.com"
    }, 
    "permissions": [
        "homey:manager:ledring"
    ],
    "drivers":[
        {
            "id": "io_maxem_driver",
            "name": {
                "en": "Driver to communicate with Maxem.io", 
                "nl": "Driver om met Maxem.io te communiceren"
            }, 
            "class": "io_maxem_driver", 
            "capabilities": ["onoff"]
        }
    ],
    "flow":{
        "conditions": [
            {
                "id": "is_activated",
                "title": {
                    "en": "The Maxem energy box is !{{activated|deactivated}}.", 
                    "nl": "De Maxem energy box is !{{geactiveerd|gedeactiveerd}}."
                }, 
                "args": [
                    {
                        "name": "ioMaxemDevice",
                        "type": "device",
                        "filter": "driver_id=io.maxem.driver"
                    }] 
            }
        ],
        "actions":[
            {
                "id": "deactivatedMaxem",
                "title": {
                    "en": "Deactivate the Maxem energy box from charging your car.",
                    "nl": "Deactiveer de Maxem energy box, het laden van de auto stopt."
                },
                "args": [{
                    "name": "ioMaxemDevice",
                    "type": "device",
                    "filter": "driver_id=io.maxem.driver"
                }] 
            }
        ]
    }, 
    "pair":[
        {
            "id": "list_devices",
            "template": "list_devices", 
            "navigation": {
                "next": "add_my_devices"
            },
            "options": {
                        "singular": true
            }
        },
        {
            "id": "add_devices",
            "template": "add_devices"
        }
    ]
}