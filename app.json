{
    "id": "io.maxem.app",
    "sdk": 2,
    "name": {
        "en": "Maxem Smart Energy",
        "nl": "Maxem Smart Energy"
    },
    "description": {
        "en": "Maxem the solution for a sustainable home!",
        "nl": "Maxem de energie manager voor een duurzaam huis!"
    },
    "category": "energy",
    "version": "1.0.0",
    "compatibility": ">=1.5.0",
    "author": {
        "name": "Edwin van Dillen",
        "email": "edwinvandillen@gmail.com"
    }, 
    "permissions": [
        "homey:manager:ledring"
    ],
    "images":{
        "large":"./assets/images/large.jpg",
        "small":"./assets/images/small.jpg"
    },
    "drivers":[
        {
            "id": "io_maxem",
            "name": {
                "en": "Maxem.io", 
                "nl": "Maxem.io"
            }, 
            "images":{
                "large":"drivers/io_maxem/assets/images/large.jpg",
                "small":"drivers/io_maxem/assets/images/small.jpg"
            },
            "class": "other", 
            "capabilities": ["onoff"], 
            "pair":[
                {
                    "id": "start"
                },
                {
                    "id": "list_devices",
                    "template": "list_devices", 
                    "navigation": {
                        "next": "add_maxem"
                    }
                },
                {
                    "id": "add_maxem",
                    "template": "add_devices"
                }
            ]
        }
    ],
    "flow":{
        "conditions": [
            {
                "id": "is_activated",
                "title": {
                    "en": "The Maxem energy box is !{{activated|deactivated}}.", 
                    "nl": "De Maxem energy box is !{{geactiveerd|gedeactiveerd}}."
                }, 
                "args": [
                    {
                        "name": "ioMaxemDevice",
                        "type": "device",
                        "filter": "driver_id=io.maxem.driver"
                    }] 
            }
        ],
        "actions":[
            {
                "id": "deactivatedMaxem",
                "title": {
                    "en": "Deactivate the Maxem energy box from charging your car.",
                    "nl": "Deactiveer de Maxem energy box, het laden van de auto stopt."
                },
                "args": [{
                    "name": "ioMaxemDevice",
                    "type": "device",
                    "filter": "driver_id=io.maxem.driver"
                }] 
            }
        ]
    }
}